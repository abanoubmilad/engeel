<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/header" />

        <EditText
            android:id="@+id/sa_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:hint="@string/searchfor"
            android:inputType="text"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_large">

            <requestFocus />
        </EditText>

        <CheckBox
            android:id="@+id/checkBoxold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:button="@null"
            android:checked="true"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:text="@string/search_old_test"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_largest" />

        <CheckBox
            android:id="@+id/checkBoxnew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:button="@null"
            android:checked="true"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:text="@string/search_new_test"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_largest" />

        <TextView
            android:id="@+id/sa_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/search_bg"
            android:gravity="center_horizontal|center_vertical"
            android:text="بحث"
            android:textColor="@color/white"
            android:textSize="@dimen/font_large"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>